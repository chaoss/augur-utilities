COMPOSE = podman-compose
INSTANCES = 8
DOMAIN = augurlabs.io
INSTANCE ?= 1
REGEN_ARGS ?=

regen:
	@echo "ğŸ”„ Rebuilding docker-compose.yml ..."
	python3 generate_compose.py $(REGEN_ARGS)

regen-nginx:
	@echo "ğŸ”„ Generating nginx.conf from labels.txt ..."
	python3 generate_nginx.py $(DOMAIN)

build:
	@echo "ğŸ”¨ Building all containers ..."
	$(COMPOSE) build

build-one:
	@echo "ğŸ”¨ Building instance$(INSTANCE) ..."
	$(COMPOSE) build instance$(INSTANCE)

up:
	@echo "ğŸš€ Currently running instance containers:"
	@podman ps --format '{{.Names}}' | grep -E '^instance[0-9]+$$' || echo "  None running."
	@echo "â¬†ï¸  Bringing up all instances..."
	podman-compose down --remove-orphans && podman container prune -f && sudo systemctl reset-failed && sudo find /run/systemd/transient /etc/systemd/system -name 'podman-*.timer' -delete
	$(COMPOSE) up -d

up-one:
	@echo "â¬†ï¸  Bringing up instance$(INSTANCE) ..."
	$(COMPOSE) up -d instance$(INSTANCE)

down:
	@echo "ğŸ§¹ Shutting down all containers ..."
	$(COMPOSE) down --remove-orphans

restart:
	@echo "ğŸ” Restarting all containers ..."
	$(COMPOSE) restart

logs:
	$(COMPOSE) logs -f instance$(INSTANCE)

ps:
	$(COMPOSE) ps

shell:
	$(COMPOSE) exec instance$(INSTANCE) /bin/bash

status:
	@echo "ğŸ“„ Checking environment files:"
	@for i in $$(seq 1 $(INSTANCES)); do \
		f=envs/instance$$i.env; \
		if [ -f $$f ]; then echo "  âœ… $$f"; else echo "  âŒ $$f MISSING"; fi; \
	done

stop-all:
	@echo "ğŸ›‘ Stopping all running containers..."
	-podman stop $$(podman ps -q)

nuke:
	@echo "ğŸ’£ Nuking all containers and networks matching pattern..."
	-podman ps -a --format "{{.ID}} {{.Names}}" | grep instance || true | awk '{print $$1}' | xargs podman rm -f
	-podman network ls --format "{{.Name}}" | grep knot | xargs podman network rm
